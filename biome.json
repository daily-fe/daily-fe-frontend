{
	"$schema": "https://biomejs.dev/schemas/stable/schema.json",
	"files": {
		"includes": ["app/**/*.*"]
	},
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"formatter": { "enabled": true, "indentStyle": "tab" },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off",
				"useTemplate": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 120,
			"indentStyle": "tab",
			"indentWidth": 4,
			"semicolons": "always"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
